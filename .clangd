CompileFlags:
    Remove: -W*
    Add: [-Wall, -pedantic, -I/opt/rocm/include, -I/opt/rocm/include/hsa, -I/opt/rocm/include/rocprofiler]
    Compiler: clang++

# list here: https://clang.llvm.org/extra/clang-tidy/checks/list.html
Diagnostics:
    UnusedIncludes: Strict
    ClangTidy:
        Add: [
          abseil*,
          bugprone*,
          clang-analyzer*,
          misc*,
          modernize*,
          performance*,
          readability*,
          cppcoreguidelines*,
        ]
        Remove: [
          cppcoreguidelines-pro*,
        ]
        #CheckOptions:
